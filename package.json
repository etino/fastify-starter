{
  "name": "fastify-starter",
  "version": "1.0.0",
  "description": "Fastify API starter code",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"tsc -w\" \"nodemon dist\"",
    "lint": "eslint --ext .tsx,.ts,.jsx,.js src/",
    "start": "npm run build && node dist",
    "typecheck": "tsc --noEmit",
    "update": "yarn upgrade-interactive --latest"
  },
  "keywords": [
    "node",
    "api",
    "fastify",
    "server",
    "starter",
    "boilerplate"
  ],
  "author": "Aro Andriamaro <ni.aro.aina@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "close-with-grace": "^1.1.0",
    "dotenv": "^10.0.0",
    "fastify": "^3.19.1",
    "fastify-autoload": "^3.8.0",
    "fastify-mongodb": "^2.0.1",
    "fastify-plugin": "^3.0.0",
    "mongodb": "^4.0.0"
  },
  "devDependencies": {
    "@types/mongodb": "^3.6.20",
    "@types/node": "^16.3.2",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "nodemon": "^2.0.12",
    "typescript": "^4.3.5"
  }
}
