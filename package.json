{
  "name": "fastify-starter",
  "version": "1.0.0",
  "description": "Fastify API starter code",
  "main": "index.js",
  "scripts": {
    "build:ts": "tsc",
    "dev": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"tsc -w\" \"nodemon dist\"",
    "start": "npm run build:ts && node dist",
    "test": "yarn build:ts && tsc -p test/tsconfig.test.json && cross-env TS_NODE_FILES=true tap --ts test/**/*.test.ts",
    "update": "yarn upgrade-interactive --latest"
  },
  "keywords": [
    "node",
    "api",
    "fastify",
    "server",
    "starter",
    "boilerplate"
  ],
  "author": "Aro Andriamaro <ni.aro.aina@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "close-with-grace": "^1.1.0",
    "fastify": "^3.19.1",
    "fastify-autoload": "^3.8.0",
    "fastify-cli": "^2.13.0",
    "fastify-mongodb": "^2.0.1",
    "fastify-plugin": "^3.0.0",
    "mongodb": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.3.2",
    "@types/tap": "^15.0.0",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "fastify-tsconfig": "^1.0.1",
    "nodemon": "^2.0.12",
    "tap": "^15.0.9",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
